<html>
<head>
    <title>Add a Store to a Brand</title>
</head>
<body>
    <h1>{{ brand.getBrandName }}</h1>

    {% if stores is not empty %}
        <p>Here are the stores for this brand:</p>
        <ul>
            {% for store in stores %}
                <li>{{ store.getStoreName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a store to this brand:</h4>

    <form action='/add_stores' method='post'>
        <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">
        <label for="store_id">Select a store</label>
        <select id='store_id' name='store_id' type='text'>
          {% for store in all_stores %}
            <option value="{{ store.getId }}"> {{ store.getStoreName }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add store</button>
    </form>

    <form action='/brand/{{ brand.getId }}/edit' method='post'>
        <input name="_method" type="hidden" value="patch">
        <label for="new_brand_name">Rename your brand: </label>
        <input id="new_brand_name" name="new_brand_name" type="text">
        <button type="submit">Update</button>
    </form>

    <form action='/brand/{{ brand.getId }}/edit' method='post'>
        <input name="_method" type="hidden" value="delete">
        <button type="submit">Delete</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
