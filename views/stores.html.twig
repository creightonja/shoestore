<html>
    <head>
        <title>Add/View Stores</title>
    </head>
    <body>
        <h1>Stores</h1>

        {% if stores is not empty %}
            <p>Here are all your stores:</p>
            <ul>
                {% for store in stores %}
                    <li><a href="/stores/{{ store.getId }}">{{ store.getStoreName }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}

            <form action='/stores' method='post'>
                <label for='store_name'>Store Name</label>
                <input id='store_name' name='store_name' type='text'>

                <button type='submit'>Add Store</button>
            </form>

            <form action='/delete_stores' method='post'>
                <button type='submit'>Clear</button>
            </form>

            <p><a href='/'>Home</a></p>

    </body>
</html>
